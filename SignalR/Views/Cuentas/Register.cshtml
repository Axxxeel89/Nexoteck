@using SignalR_Core.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card-header">
        <h2>Registro de usuarios</h2>
    </div>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mt-4">
                <div class="col">
                    <label asp-for="@Model.Nombre"></label>
                    <input asp-for="@Model.Nombre" class="form-control" type="text"/>
                    <span asp-validation-for="@Model.Nombre"></span>
                </div>

                <div class="col">
                    <label asp-for="@Model.Apellido"></label>
                    <input asp-for="@Model.Apellido" class="form-control" type="text" />
                    <span asp-validation-for="@Model.Apellido"></span>
                </div>

                <div class="col">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" type="text" />
                    <span asp-validation-for="@Model.Email"></span>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col">
                    <label asp-for="@Model.Empresa"></label>
                    <input asp-for="@Model.Empresa" class="form-control" type="text" />
                    <span asp-validation-for="@Model.Empresa"></span>
                </div>

                <div class="col">
                    <label asp-for="@Model.Celular"></label>
                    <input asp-for="@Model.Celular" class="form-control" type="text" />
                    <span asp-validation-for="@Model.Celular"></span>
                </div>

                <div class="col">
                    <label asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" class="form-control" type="password" />
                    <span asp-validation-for="@Model.Password"></span>
                </div>

                <div class="col">
                    <label asp-for="@Model.ConfirmPassword"></label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="text" />
                    <span asp-validation-for="@Model.ConfirmPassword"></span>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Registrar</button>

            </div>
        </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
