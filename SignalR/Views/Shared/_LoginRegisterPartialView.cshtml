@using Microsoft.AspNetCore.Identity;

@inject UserManager<IdentityUser> UserManager;
@inject SignInManager<IdentityUser> SignInManager;


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" href="">Bienvenido @UserManager.GetUserName(User)</a>
        </li>

        <li class="nav-item">
            <form asp-controller="Cuentas" asp-action="SalirAplicacion" method="post" class="form-inline">
                <button class="btn nav-item text-white" type="submit">Cerrar Sesión</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Cuentas" asp-action="Register">Registrar</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Cuentas" asp-action="Login">Login</a>
        </li>       
    }

</ul>